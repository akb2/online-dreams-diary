mixin container(vSpacings, hSpacings, ceilHeight="auto", center=false, width=600, align='' )
  - containerClass = 'container' + (!!vSpacings? '--' + vSpacings: '') + (!!hSpacings? '--' + hSpacings: '') + (!!align? '--' + align: '')
  if(center === true)
    table( class = attributes.class )
      tr
        td
        td.container__overlay( class=!!ceilClass? ' ' + ceilClass: '', height=ceilHeight, width=width, valign="middle" )
          table
            tr
              td( class=containerClass )
                block
        td
  else
    table( class = attributes.class )
      tr
        td.container__overlay( class=!!ceilClass? ' ' + ceilClass: '', height=ceilHeight, width=width, valign="middle" )
          table
            tr
              td( class=containerClass )
                block