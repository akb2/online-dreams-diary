Options All -ExecCGI -Indexes -Includes +FollowSymLinks
AddDefaultCharset UTF-8

php_value display_errors 1
php_value display_startup_errors 1
php_value error_reporting -1

php_value upload_max_filesize 15M
php_value post_max_size 15M
php_value max_execution_time 300
php_value max_input_time 300

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /api
  RewriteRule ^([A-z0-9\-_]+)\/([A-z0-9\-_]+)$ build.php?controller=$1&method=$2 [QSA]
  RewriteCond %{REQUEST_URI} (.*/[^/.]+)($|\?)
</IfModule>

<IfModule mod_headers.c>
  Header add Access-Control-Allow-Origin "*"
  Header set Cache-Control "no-transform"
  Header set Content-Type "multipart/form-data; charset=utf-8"
  Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE"
  Header set Access-Control-Allow-Headers "X-Requested-With, content-type, Authorization"
</IfModule>

<IfModule mod_gzip.c>
  mod_gzip_on Yes
  mod_gzip_dechunk Yes
  mod_gzip_item_include file \.(html?|txt|css|js|php|pl|png|swf)$
  mod_gzip_item_include handler ^cgi-script$
  mod_gzip_item_include mime ^text\.*
  mod_gzip_item_include mime ^application/x-javascript.*
  mod_gzip_item_exclude mime ^image\.*
  mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>