<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="DreamsDiary" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Customize your theme here. -->
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>
    <!-- Главный блок -->
    <style name="DreamsDiary.MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Основной фон -->
    <style name="DreamsDiary.ContentLayout" parent="DreamsDiary.MainLayout">
        <item name="android:background">@color/background</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Общий стиль для шапки -->
    <style name="DreamsDiary.ToolbarMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <!-- Общий стиль для левого меню -->
    <style name="DreamsDiary.LeftMenu">
        <item name="android:layout_width">@dimen/left_menu_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
    </style>
    <!-- Лоадер -->
    <style name="DreamsDiary.ActivityLoader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/primary_500</item>
    </style>
    <!-- Лоадер: спинер -->
    <style name="DreamsDiary.ActivityLoader.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>
    <!-- Стиль форм -->
    <style name="Material.CardForm" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_border_radius</item>
        <item name="cardElevation">@dimen/card_shadow_size</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/card_border_size</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:layout_margin">@dimen/activity_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Стиль текстовых полей: обертка -->
    <style name="Material.TextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/card_padding</item>
    </style>
    <!-- Стиль текстовых полей: поле ввода -->
    <style name="Material.TextField.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <!-- Стиль кнопок: текст -->
    <style name="Material.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Стиль кнопок: границы -->
    <style name="Material.OutlinedButton" parent="Material.TextButton">
        <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_outlined_color</item>
    </style>
    <!-- Стиль кнопок: закрашенная -->
    <style name="Material.FlatButton" parent="Material.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/mtrl_btn_text_btn_flat_background</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_flat_color</item>
    </style>
</resources>