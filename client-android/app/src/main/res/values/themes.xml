<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamsDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/background</item>
        <!-- Customize your theme here. -->
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>
    <!-- Стиль кнопок: текст -->
    <style name="Material.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Стиль кнопок: границы -->
    <style name="Material.OutlinedButton" parent="Material.TextButton">
        <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_outlined_color</item>
    </style>
    <!-- Стиль кнопок: закрашенная -->
    <style name="Material.FlatButton" parent="Material.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary_500</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_flat_color</item>
    </style>
</resources>